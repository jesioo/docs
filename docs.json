{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "dx - Terminal DX",
  "colors": {
    "primary": "#8AE051",
    "light": "#A7F067",
    "dark": "#6BBF3B"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "manifesto",
              "principles"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "essentials/interface",
              "essentials/menu-system",
              "essentials/command-execution",
              "essentials/markdown-viewer",
              "essentials/motd-system",
              "essentials/recording",
              "essentials/security"
            ]
          },
          {
            "group": "AI Native",
            "pages": [
              "ai-tools/aliases",
              "ai-tools/llm-agents",
              "ai-tools/command-generation"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/dx-cli/dx",
          "icon": "github"
        },
        {
          "anchor": "Install",
          "href": "https://usedx.sh",
          "icon": "download"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/dx-cli/dx"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Install dx",
      "href": "https://usedx.sh"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/dx-cli/dx"
    }
  }
}
